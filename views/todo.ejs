<html>
    <head>
        <title>Todo List</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
        <script src="/assets/todo-list.js"></script>
        <link rel="stylesheet" href="/assets/styles.css">
    </head>

    <body>
    <div id="todo-table">
        <form action="">
            <input type="date" name="todoDate" id="set-date" required>
            <input id="input1" type="text" name="item" placeholder="Add new item.." required>
            <input id="input2" type="text" name="username" placeholder="Add new item.." value="<%=id%>" hidden>

            <button type="submit">Add Item</button>
        </form>

        <ul>
            <%for(var i = 0; i < todo.length; i++){%>
                <li><%=todo[i].item%></li><span><%=todo[i].todoDate%></span>
            <%}%>
        </ul>
    </div>

    </body>



</html>